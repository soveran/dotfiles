# Don't display the copyright page.
startup_message off

# Set the escape sequence.
escape ^Ff

# Toggle between last used windows.
bind f other

# Disable detaching.
bind ^d
bind d

# Shorten the time a message is displayed.
msgwait 0.5

# Set up UTF-8 as the default encoding.
encoding UTF-8

# Set format for activity messages.
activity "Activity in window %n %t at %c"

# This will show the titles and locations of all screen windows.
hardstatus alwayslastline "%{KW} %-w%{Wg} %n %t %{KW}%+w %=%l %c"

# Increase the scroll size.
defscrollback 3000

# Advertise color capabilities.
term "screen-256color"

# Use bright colors for bold.
attrcolor b ".I"
